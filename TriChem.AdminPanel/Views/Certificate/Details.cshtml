@model TriChem.AdminPanel.Models.Result<TriChem.Models.Certificate.ViewModels.CertificateDetailsVM>

@{
  ViewBag.Title = "Details";
}


<div class="flex-between py-5">
  <h2 class="text-white m-0">Certificate Details</h2>
  <div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning py-3" })
    &nbsp;&nbsp;
    @Html.ActionLink("Edit", "Edit", new { id = Model.Entity.Id }, new { @class = "btn btn-primary py-3" })
  </div>
</div>


<div class="box-shadow bg-white b-6 p-5">
  <dl class="dl-horizontal">
    <dt class="py-2">
      @Html.DisplayNameFor(model => model.Entity.Title)
    </dt>

    <dd class="py-2">
      @Html.DisplayFor(model => model.Entity.Title)
    </dd>

    <dt class="py-2">
      @Html.DisplayNameFor(model => model.Entity.Title_Ar)
    </dt>

    <dd class="py-2">
      @Html.DisplayFor(model => model.Entity.Title_Ar)
    </dd>

    <dt class="py-2">
      @Html.DisplayNameFor(model => model.Entity.ImageURL)
    </dt>

    <dd class="py-2">
      @if (!string.IsNullOrEmpty(Model.Entity.ImageURL))
      {
        var path = Model.Entity.ImageURL.Substring(Model.Entity.ImageURL.IndexOf('-'));
        <img src="@Url.Content(path.Substring(path.IndexOf('/')))" style="width: 150px" />
      }
    </dd>

    <dt  class="py-2">
      @Html.DisplayNameFor(model => model.Entity.FilePath)
    </dt>

    <dd class="py-2">
      @if (!string.IsNullOrEmpty(Model.Entity.FilePath))
      {
        var filePath = Model.Entity.FilePath.Substring(Model.Entity.FilePath.IndexOf('-'));
        <a href="@Url.Content(filePath.Substring(filePath.IndexOf('/')))">
      <img src="~/Content/img/pdf.png" /></a>
      }

    </dd>

    <dt class="py-2">
      @Html.DisplayNameFor(model => model.Entity.CategoryTitle)
    </dt>

    <dd class="py-2">
      @Html.DisplayFor(model => model.Entity.CategoryTitle)
    </dd>
  </dl>
</div>
