@model TriChem.AdminPanel.Models.PagedResults<TriChem.Models.Product.ViewModels.ProductListVM>
@using PagedList.Mvc;

@{
  ViewBag.Title = "Index";
}

<style>
  .table tbody td {
    white-space: nowrap;
    max-width: 250px;
    overflow: hidden;
    text-overflow: ellipsis;
    height: 46px;
  }
</style>

<div class="flex-between py-5">
  <h2 class="text-white m-0">All Products</h2>
  <p class="mb-0">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
  </p>
</div>

<div class="box-shadow bg-white b-6 p-4">
  <div class="text-right pb-3" style="display: flex; justify-content: flex-end;">
    @Html.Partial("_PageSize")
    &nbsp;&nbsp;
    @Html.Partial("_SortOrder")
  </div>

  <div class="table-responsive" style="max-width:100%; overflow: auto;">
    <table class="table table-condensed table-hover table-striped">
      <thead>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().Title)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().SubTitle)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().Description)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().TypicalApplication)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().ProductFeatures)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().Properties)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().DataSheetPath)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().CertificatePath)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().CategoryId)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().LinkId)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().Title_Ar)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().SubTitle_Ar)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().Description_Ar)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().TypicalApplication_Ar)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().ProductFeatures_Ar)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().Properties_Ar)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Entities.First().Index)
      </th>
      </thead>
      <tbody>

        @foreach (var item in Model.Entities)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.SubTitle)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.TypicalApplication)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.ProductFeatures)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Properties)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.DataSheetPath)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.CertificatePath)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.LinkId)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Title_Ar)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.SubTitle_Ar)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Description_Ar)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.TypicalApplication_Ar)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.ProductFeatures_Ar)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Properties_Ar)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Index)
            </td>
            <td>
              @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
              @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
              @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
          </tr>
        }

      </tbody>
    </table>
  </div>

<div id="paging" class="flex-between">
  Page @(Model.MetaData.PageCount < Model.MetaData.PageNumber ? 0 : Model.MetaData.PageNumber) of @Model.MetaData.PageCount
  <div>
    @Html.PagedListPager(Model.Entities, PageNumber => Url.Action("Index", new { PageNumber, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
  </div>
  <span></span>
</div>
</div>
